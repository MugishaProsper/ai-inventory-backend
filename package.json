{
  "name": "inventrika-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "AI-Powered Inventory Management System Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "build": "echo 'No build step required for Node.js'",
    "seed": "node scripts/seed-database.js",
    "migrate": "node scripts/migrate-database.js",
    "backup": "node scripts/backup-database.js",
    "docs": "node scripts/generate-docs.js"
  },
  "keywords": [
    "inventory",
    "management",
    "ai",
    "analytics",
    "nodejs",
    "express",
    "mongodb",
    "rest-api",
    "forecasting",
    "supply-chain"
  ],
  "author": {
    "name": "Inventrika Team",
    "email": "team@inventrika.com",
    "url": "https://inventrika.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/inventrika-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/inventrika-backend/issues"
  },
  "homepage": "https://github.com/your-username/inventrika-backend#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.2.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "nodemailer": "^6.9.12",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "tests/",
      "coverage/",
      "logs/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  }
}