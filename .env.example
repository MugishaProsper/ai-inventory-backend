# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/inventrika
DB_NAME=inventrika

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this-too

# Client Configuration
CLIENT_URL=http://localhost:3000

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@inventrika.com

# Cloudinary Configuration (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AI_MAX_REQUESTS=20

# AI Configuration
AI_CONFIDENCE_THRESHOLD=0.7
FORECAST_DEFAULT_PERIOD=30
ANOMALY_SENSITIVITY=medium
REORDER_SAFETY_FACTOR=1.5

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# External API Keys (Optional)
WEATHER_API_KEY=your-weather-api-key
CURRENCY_API_KEY=your-currency-api-key

# Development Settings
DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_SWAGGER=true